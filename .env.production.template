# Production Environment Configuration for DigitalOcean
# Copy this file to .env.production and fill in your actual values

NODE_ENV=production

# DigitalOcean App Platform Configuration
PORT=8080
HOST=0.0.0.0

# External PostgreSQL Configuration (DigitalOcean Managed Database)
DATABASE_URL=postgresql://username:password@host:port/database
# OR individual parameters:
DB_HOST=your-postgres-host.com
DB_PORT=5432
DB_NAME=telecheck_prod
DB_USER=telecheck_user
DB_PASSWORD=your-secure-password
DB_MAX_CONNECTIONS=50

# External Redis Configuration (DigitalOcean Managed Redis)
REDIS_URL=redis://username:password@host:port
# OR individual parameters:
REDIS_HOST=your-redis-host.com
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Frontend Configuration
FRONTEND_URL=https://your-app-name.ondigitalocean.app
CORS_ORIGIN=https://your-app-name.ondigitalocean.app

# Security Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# SSL Configuration for External Database
DB_SSL=true
DB_SSL_REJECT_UNAUTHORIZED=false

# WebSocket Configuration (if using real-time features)
VITE_WS_URL=wss://your-app-name.ondigitalocean.app

# Monitoring and Logging
LOG_LEVEL=info
ENABLE_METRICS=true
